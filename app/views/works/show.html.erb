<body>
<main>
<section>
  <h2><%= @work.title %></h2>
  <p>Created by: <%= @work.creator %> </p>
  <p>Published: <%= @work.publication_year %></p>
  <p></p>
  <section>
    <a class="btn btn-primary" href="/">Back to media ranks</a>
    <a class="btn btn-primary" <%= link_to "Edit", edit_work_path(@work), method: :get %> 
    <a class="btn btn-primary" <%= link_to "Upvote", work_votes_path(@work.id), method: :post %>
    <a class="btn btn-danger" <%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure?"} %>
  </section>
</section>

<section class="works-votes__container">
  <h3 class="works-votes__header"> <%=@work.votes.count%> vote(s) for this <%=@work.category%></h3>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @work.votes.each do |vote| %>
        <tr>
          <td><%= link_to vote.user.name, user_path(vote.user)%></td>
          <td><%= (vote.created_at).to_date%></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</section>
</main>
</body>
